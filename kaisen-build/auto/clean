#!/bin/bash

set -e

GREEN='\e[1;32m'
RED='\e[1;31m'

if [[ $EUID -ne 0 ]]; then
        echo -e $RED "Run this script as root or with the sudo command. Aborting.";tput init
        exit 1
fi

lb clean noauto "$@"
rm -rf cache config unpacked-initrd .build tmp images
echo -e $GREEN "All files generated by kaisen-build were deleted successfully.";tput init
