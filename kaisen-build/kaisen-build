#!/bin/bash

set -e

export variant=$2
export version=$3

if [[ "$EUID" -ne 0 ]]; then
	echo -e "Run this script as root"
	exit 1
fi

function explaination() {
	echo -e "Kaisen Linux ISO build

USAGE
 	 sudo ./kaisen-build <action> <variant> <version>

EXPLAINATION

      action  - help, build, clean
                help : display help
		build : build iso
		clean : clean residual files

      variant - MATE, XFCE, KDE, LXDE
		the graphical interface to use

      version - select your version number

EXAMPLE
 	 sudo ./kaisen-build build MATE 1.2
"
}

function kaisen-build() {
	lb build
	mv live-image-amd64.hybrid.iso ../kaisenlinuxrolling$version-amd64-$variant.iso
	lb clean
	rm -rf cache config .build || true
}

function clean() {
	lb clean
	rm -rf cache config .build || true
}

case $1 in
        build)
                kaisen-build
        ;;
	clean)
		clean
	;;
        help)
                explaination
        ;;
        *)
                explaination
        ;;
esac
